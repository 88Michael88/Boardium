@model Boardium.Models.Game.Game;
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <!-- Game Image -->
        <div class="col-md-4 text-center">
            <img src="@Model.Images.Select(gi=>gi.IsCoverImage)" alt="@Model.Title" class="img-fluid rounded shadow-sm"/>
        </div>

        <!-- Game Info -->
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p class="text-muted">@Model.Description</p>

            <ul class="list-group list-group-flush mb-3">
                <li class="list-group-item"><strong>Players:</strong> @Model.MinPlayers - @Model.MaxPlayers</li>
                <li class="list-group-item"><strong>Playing Time:</strong> @Model.PlayingTimeMinutes minutes</li>
                <li class="list-group-item">
                    <strong>Categories:</strong>
                    @foreach (var category in Model.Categories) {
                        <span class="badge bg-secondary me-1">@category</span>
                    }
                </li>
            </ul>

            <!-- Copies -->
            <div class="mb-3">
                <h4>Game Copies</h4>
                <ul class="list-group">
                    @foreach (var copy in Model.GameCopies) {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Copy ID: @copy.Id
                            <span class="badge bg-@(copy.IsAvailable ? "success" : "danger")">
                                @(copy.IsAvailable ? "Available" : "Rented")
                            </span>
                        </li>
                    }
                </ul>
            </div>

            <!-- Publisher Info -->
            <div>
                <h4>Publisher Info</h4>
                <p><strong>Name:</strong> @Model.Publisher.Name</p>
                <p><strong>Website:</strong> <a href="@Model.Publisher.Website" target="_blank">@Model.Publisher.Website</a></p>
            </div>
        </div>
    </div>
</div>
